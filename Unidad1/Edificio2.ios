!! 1.

! a. Nombre Edificio2
hostname Edificio2

! b. Mensaje de entrada
banner motd $Accesando al switch$

! c. SSH
interface vlan 150
ip domain-name tecnm.edu.mx
username soporte secret cisco
crypto key generate rsa
y
1024

ip ssh version 2
line vty 0 15
transport input ssh
login local

! d. Contraseñas
exit
enable secret privi

line console 0
password conso
login
logging synchronous

! e. Encriptar
exit
service password-encryption

! f. Dirección IP, gateway y VLAN 192.168.150.0/27 30
interface vlan 150
ip address 192.168.150.4 255.255.255.224
no shutdown
ip default-gateway 192.168.150.1
interface f0/23
switchport mode access
switchport access vlan 150
vlan 150
name ADMIN
interface vlan 1
no shutdown

! g. Desactivar búsqueda del DNS
exit
no ip domain-lookup

! h. Devolver al prompt
line console 0
logging synchronous
line vty 0 15
logging synchronous

! i. Troncales
exit
interface f0/24
switchport mode trunk

!! 2. Seguridad de DHCP y CDP

! Apagar todos los puertos
interface range f0/1-24
shutdown
interface range g0/1-2
shutdown

interface range f0/2, f0/4, f0/1, f0/5, f0/6, f0/20, f0/23, f0/24
no shutdown
exit

! DHCP
ip dhcp snooping
interface range f0/24, f0/20
ip dhcp snooping trust
exit

!!! Entrar a los puertos y ponerles shutdown
!!! Trust nomás va en servidores, troncales y accesspoints

! CDP
no cdp run

!! 3. Seguridad de puertos

! a. Modo sticky en donde haya hosts
interface range f0/1, f0/2, f0/4, f0/5, f0/6, f0/20, f0/23
switchport mode access
switchport port-security
switchport port-security mac-address sticky

! b. Activar restict
switchport port-security violation restrict

! c. Solo un Host, solo permitir una MAC
interface range f0/1, f0/4, f0/23
switchport port-security maximum 1

! d. Permitir dos direcciones y subdirecciones
interface range f0/2, f0/5, f0/6
switchport port-security maximum 2

! e. Puertos AP, permitir 3 (en el puerto donde estén conectados los ap al switch)
interface range f0/20
switchport port-security maximum 3

